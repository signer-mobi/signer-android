<FrameLayout 
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="fill_parent"
	 android:layout_height="fill_parent"
    >
	<LinearLayout 
    android:layout_width="fill_parent"
	 android:layout_height="fill_parent"
  
     
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_v3"
    >
		<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	     android:layout_gravity="left"
	     android:layout_marginTop="25dp"
	    >

	     <TextView
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:text="@string/fukuan"

	      android:layout_gravity="left"
	      android:id="@+id/title"
	      android:textSize="17sp"
          android:textColor="#5b5f9b"
	      android:layout_marginLeft="20dp"  
	        />
	    
	</LinearLayout>
	   
	     <TextView
	      android:layout_width="200dp"
	      android:layout_height="wrap_content"
	      android:text="@string/qingsaomiao2code"
	      android:textSize="21sp"
	      android:gravity="center_horizontal"
	      android:textColor="@android:color/white" 
	      android:layout_marginTop="5dp"
	      android:layout_marginRight="35dp"
	      android:id="@+id/info"
	      	        />
	     <ImageView 
	       android:layout_width="240dp"
	       android:layout_height="240dp"  
		   android:src="@drawable/qrbox"  
	       android:id="@+id/erweima"
	         />
	     <LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	     android:layout_gravity="left"
	     android:layout_marginTop="10dp"
	    >
	     <Button 
	      android:layout_width="100dp"
	      android:layout_height="45dp"
	      android:id="@+id/btn_1"
	      android:text="@string/shangyiye"    
	     
	       android:background="@drawable/button_bg"
          android:textColor="@android:color/white" 
          android:textSize="19sp"
          android:paddingBottom="5dp"
          android:layout_marginLeft="18dp"
	         />
	      <Button 
	      android:layout_width="100dp"
	      android:layout_height="45dp"
	      android:id="@+id/btn_2"
	      android:text="@string/xiayiye"   
	       android:background="@drawable/button_bg"
          android:textColor="@android:color/white" 
          android:textSize="19sp"
          android:paddingBottom="5dp"  
           android:layout_marginLeft="5dp"
          
	         />
  </LinearLayout> 
  


</LinearLayout>

			
	<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		     android:layout_gravity="right"
		     android:layout_marginTop="10dp"
		     android:layout_marginRight="5dp"
		     android:id="@+id/qiehuan_bz"
		    >
		  
		     <ImageView
		      android:layout_width="30dp"
		      android:layout_height="30dp"
		      android:src="@drawable/bz1_icon"
		      android:id="@+id/bz_icon"
		        />
		   
		     <ImageView
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:src="@drawable/arrow"
		     android:id="@+id/bz_zhishi"
		        />
		</LinearLayout>
	
	
</FrameLayout>	